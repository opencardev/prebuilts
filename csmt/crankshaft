    echo "			access 'read write'" >> $TEMPSTATE
    echo "			type BOOLEAN" >> $TEMPSTATE
    echo "			count 1" >> $TEMPSTATE
    echo "		}" >> $TEMPSTATE
    echo "	}" >> $TEMPSTATE
    echo "	control.7 {" >> $TEMPSTATE
    echo "		iface MIXER" >> $TEMPSTATE
    echo "		name 'Sidetone Playback Volume'" >> $TEMPSTATE
