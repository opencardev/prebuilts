    echo "			dbvalue.0 2000" >> $TEMPSTATE
    echo "		}" >> $TEMPSTATE
    echo "	}" >> $TEMPSTATE
    echo "	control.6 {" >> $TEMPSTATE
    echo "		iface MIXER" >> $TEMPSTATE
    echo "		name 'Mic Capture Switch'" >> $TEMPSTATE
